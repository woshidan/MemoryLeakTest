<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.example.woshidan.memoryreaktest.MainActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bottomSheet"
        android:text="BottomSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <android.support.v7.widget.AppCompatButton
        android:layout_below="@id/bottomSheet"
        android:id="@+id/navigationView"
        android:text="NavigationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <android.support.v7.widget.AppCompatButton
        android:layout_below="@id/navigationView"
        android:id="@+id/recyclerView"
        android:text="RecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <android.support.v7.widget.AppCompatButton
        android:layout_below="@id/recyclerView"
        android:id="@+id/dialog"
        android:text="Dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <android.support.v7.widget.AppCompatButton
        android:layout_below="@id/dialog"
        android:id="@+id/staticLeak"
        android:text="Static Field Leak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <android.support.v7.widget.AppCompatButton
        android:layout_below="@id/staticLeak"
        android:id="@+id/asyncTaskWithLeak"
        android:text="AsyncTask(Leak)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <android.support.v7.widget.AppCompatButton
        android:layout_below="@id/asyncTaskWithLeak"
        android:id="@+id/rxJava"
        android:text="RxJava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <android.support.v7.widget.AppCompatButton
        android:layout_below="@id/rxJava"
        android:id="@+id/asyncTaskWithoutLeak"
        android:text="AsyncTask(NotLeak)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>
